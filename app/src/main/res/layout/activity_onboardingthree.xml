<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/onboardtigaa"
    tools:context=".onboardingFirst">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="125dp"
                android:background="@drawable/slidertiga">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="250dp"
                    android:layout_weight="700"
                    android:gravity="center"
                    android:text="Fitur Canggih untuk Deteksi Penyakit Tanaman-Mu"
                    android:textColor="@color/second"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppinsbold"/>

            </LinearLayout>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan tanamanmu untuk mendeteksi penyakit dengan cepat dan akurat"
            android:textSize="14sp"
            android:textColor="@color/second"
            android:gravity="center"
            android:layout_marginTop="5px"
            android:fontFamily="@font/poppinsreguler">
        </TextView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="344dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/primary"
                android:fontFamily="@font/poppinsasemibold"
                android:text="Punya Akun"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="8dp"/>

            <Button
                android:layout_width="344dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/putihG"
                android:fontFamily="@font/poppinsasemibold"
                android:text="Buat Akun"
                android:textSize="20sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                app:cornerRadius="8dp"/>


        </LinearLayout>

    </FrameLayout>


</LinearLayout>